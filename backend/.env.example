# Database Configuration
DATABASE_URL=postgresql://landlord_user:landlord_pass@localhost:5432/landlord_dashboard

# SimpleFIN API Configuration
SIMPLEFIN_BASE_URL=https://api.simplefin.org
SIMPLEFIN_TOKEN=your-simplefin-token-here
SIMPLEFIN_SETUP_TOKEN=your-setup-token-here

# Discord Webhooks
DISCORD_WEBHOOK_BILLS=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_PAYMENT=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Gmail OAuth Configuration
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3002/api/gmail/callback
GMAIL_TOPIC_NAME=projects/your-project/topics/your-topic
GMAIL_SUBSCRIPTION_NAME=projects/your-project/subscriptions/your-subscription

# AWS Configuration (Optional)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=landlord-documents

# Application Settings
NODE_ENV=development
PORT=3002
JWT_SECRET=your-jwt-secret-for-tenant-portal

# Tenant Portal Configuration
TENANT_PORTAL_URL=http://localhost:3003
ENABLE_TENANT_PORTAL=true