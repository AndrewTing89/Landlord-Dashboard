# Database Configuration (Local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=landlord_dashboard
DB_USER=landlord_user
DB_PASSWORD=landlord_pass

# Plaid Configuration (Change to Development/Production)
PLAID_CLIENT_ID=your-real-plaid-client-id
PLAID_SECRET=your-real-plaid-secret
PLAID_ENV=development

# AWS Configuration (Local - for Excel exports)
AWS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
S3_BUCKET=landlord-dashboard-exports

# Application Configuration
NODE_ENV=production
PORT=3002

# Roommate Configuration
ROOMMATE_VENMO_USERNAME=@your-roommate-venmo
ROOMMATE_NAME=Roommate Name
SPLIT_COUNT=3
ROOMMATE_PHONE=+1234567890
ROOMMATE_EMAIL=roommate@email.com

# Owner Configuration
OWNER_PHONE=+1234567890
OWNER_EMAIL=your-email@gmail.com

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-app-specific-password

# Twilio Configuration (for SMS) - Optional
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+1234567890